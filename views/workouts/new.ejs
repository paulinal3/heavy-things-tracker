<head>
    <link rel="stylesheet" href="/static/css/workouts.css">
</head>

<body>
    <header>
        <nav>
            <div class="navContainer">
                <div class="newSearchLink">
                    <a href="/auth/logout" class="profileNav">Logout</a>
                    <a href="/profile" class="profileNav">Profile</a>
                </div>
                <div class="logLink">
                    <a href="/workouts/newPlan" class="profileNav">Plan a Workout</a>
                    <a href="/workouts/new" class="profileNav">Log a Workout</a>
                    <a class="profileNav" href="/exercises/search">Search for Exercises</a>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <h1 id="logWorkoutTitle">Log Your Latest Workout!</h1>
    </div>
        <form method="POST" action="/workouts/new" enctype="multipart/form-data">
            <div id="logRow">
                <div id="firstCol">
                    <label for="date">Date Completed:</label>
                    <label for="workoutType">Type of Workout:</label>
                    <label for="duration">Duration (minutes):</label>
                </div>
                <div id="secondCol">
                    <input id="date" type="date" name="date">
                    <input id="workoutType" type="text" name="type">
                    <input id="duration" type="number" name="duration">
                </div>
                <div>
                </div>
            </div>
            <div>
                <label for="comments">Comments:</label>
                <input id="comments" type="text" name="comments">
            </div>
            <div>
                <label for="img">Upload a Photo: </label>
                <input id="img" type="file" name="myFile">
            </div>
            <div>
                <input type="submit" value="Log Workout"></input>
            </div>
        </form>
    </div>
</body>
