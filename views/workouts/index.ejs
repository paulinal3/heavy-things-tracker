<div class="row">
    <div class="col">
        <nav class="nav">
            <ul class="nav">
                <% if (!currentUser) { %>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/auth/signup">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/auth/login">Login</a>
                    </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/auth/logout">Logout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/profile">Profile</a>
                        </li>
            </ul>
            <% } %>
        </nav>
    </div>
    <div class="col">
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/workouts/newPlan">Plan a Workout</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/workouts/new">Log a Workout</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/exercises/search">Search for Exercises</a>
            </li>
        </ul>
    </div>
</div>

<h3 class="text-center">All Your Logged Workouts</h3>

<ol>
    <% results.forEach(workout => { %>
        <li>
            <a href="/workouts/<%= workout.id %>">
            <%= workout.date %>
            </a>
        <li>
    <% }) %> 
</ol>