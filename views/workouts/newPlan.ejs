<head>
    <link rel="stylesheet" href="/static/css/workouts.css">
</head>

<body>
    <nav>
        <div class="navContainer">
            <div class="profileLink">
                <a href="/profile" class="searchNav">Profile</a>
            </div>
            <div class="logLink">
                <a href="/workouts/newPlan" class="searchNav">Plan a Workout</a>
                <a href="/workouts/new" class="searchNav">Log a Workout</a>
            </div>
            <div class="searchLink">
                <a href="/auth/logout" class="searchNav">Logout</a>
            </div>
        </div>
    </nav>

    <div id="buildContainer">
        <div id="buildList">
            <h4>Build Your Next Workout</h4>
            <div id="exerciseList">
                <form action="/workouts/newPlan" method="POST">
                    <div>
                        <label for="schedule">Scheduled Workout Date:</label>
                        <input id="schedule" type="date" name="scheduledDate">
                    </div>
                    <div>
                        <label for="type">Type of Workout:</label>
                        <input id="type" type="text" name="type">
                    </div>
                    <h5>Exercises:</h5>
                        <ol>
                            <li>
                                <input type="text" name="name">
                            </li>
                            <li>
                                <input type="text" name="name">
                            </li>
                        </ol>
                        <input type="submit" id="saveBtn" value="Save Workout">
                </form>
            </div>
        </div>
        <div class="overflow-auto">
            <h4>All Your Saved Exercises </h4>
            <ul>
                <% exerciseSaves.forEach(exercise => { %>
                    <li>
                        <% let name = exercise.name %>
                        <%= name %>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>

    <!-- <script src="/static/js/workouts.js"></script> -->
</body>
















