<head>
    <link rel="stylesheet" href="/static/css/style.css">
</head>

<body>
    <header>
        <nav>
            <div class="navContainer">
                <div class="profileLink">
                    <a href="/" class="searchNav">Home</a>
                </div>
                <div class="logLink middleLink">
                    <!-- <a href="/workouts/newPlan" class="searchNav">Plan a Workout</a> -->
                    <a href="/workouts/new" class="searchNav" id="log">Log a Workout</a>
                </div>
                <div class="searchLink">
                    <a href="/exercises/search" class="Search Exercises">Search Exercises</a>
                    <a href="/auth/logout" class="searchNav">Logout</a>
                </div>
            </div>
        </nav>
    </header>

    <div id="profileName">
        <h1>
            <%= currentUser.name %>'s Profile 
        </h1>
    </div>

    <div id="homeRow">
        <div class="profileContainer overflow-auto">
            <h3 class="containerTitle"><a href="/workouts">Workout History</a></h3>
            <ul>
                <% results.forEach(workout => { %>
                    <% if(workout.dataValues.completed === true) { %>
                    <li class="profileList">
                        <%= workout.dataValues.date %>: <%= workout.dataValues.type %> 
                    </li>
                    <% } %>
                <% }) %> 
            </ul>
        </div>
        <div class="profileContainer overflow-auto">
            <h3 class="containerTitle"><a href="/exercises/saves">Saved Exercises</a></h3>
            <ul>
                <% saves.forEach(save => { %>
                    <li class="profileList">
                        <%= save.dataValues.name %>
                    </li>
                <% }) %> 
            </ul>
        </div>
    </div>
    
    <footer class="shortFooter">
        <%- include('partials/shortFooter') %>
    </footer>
</body>