<head>
    <link rel="stylesheet" href="/static/css/exercises.css">
</head>

<body>
    <header>
        <nav>
            <%- include('../partials/userNavBar') %>
        </nav>

        <div class="exercise-name">
            <h1><%= name %></h1>
        </div>
    </header>

    <div class="exerciseBody">
        <div>
            <img src="<%= demoVid %>" alt = "animation demo of <%= name %> ">
        </div>
        <div class="exerciseInfo">
            <div class="info">
                <% if(bodyPart === 'waist'){ %>
                    <% newName = 'Abs' %>
                    <p>Muscle Group: <%= newName %> </p>
                    <% } else { %>
                        <p>Muscle Group: <%= bodyPart %></p>
                <% } %> 
                <p>Equipment: <%= equipment %> </p>
                <p>Muscle Targeted: <%= targetMuscle %> </p>
            </div>
        </div>
    </div>
    <div id="saveForm">
        <form method="POST" action="/exercises">
            <input hidden type="text" name="name" value="<%= name %>">
            <input hidden type="text" name="bodyPart" value="<%= bodyPart %>">
            <input hidden type="text" name="equipment" value="<%= equipment %>">
            <input hidden type="text" name="muscleTargeted" value="<%= targetMuscle %>">
            <input hidden type="text" name="exerciseDemo" value="<%= demoVid %>">
            <button type="submit" id="saveBtn">Save for Later!</button>
        </form>
    </div>

    <footer class="shortFooter">
        <%- include('../partials/shortFooter') %>
    </footer>
</body>