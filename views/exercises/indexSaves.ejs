<head>
    <link rel="stylesheet" href="/static/css/exercises.css">
</head>

<body>
    <header>
        <nav>
            <div class="navContainer">
                <div class="profileLink">
                    <a href="/profile" class="searchNav">Profile</a>
                </div>
                <div class="logLink">
                    <a href="/workouts/newPlan" class="searchNav">Plan a Workout</a>
                    <a href="/workouts/new" class="searchNav">Log a Workout</a>
                </div>
                <div class="searchLink">
                    <a href="/auth/logout" class="searchNav">Logout</a>
                </div>
            </div>
        </nav>
    </header>

    <div id="savedTitle">
        <h1>All Your Saved Exercises </h1>
    </div>
    
    <div id="savedContainer">
        <div id="firstRow">
            <div id="chest" class="overflow-auto">
                <h3 class="muscleTitle">Chest:</h3>
                <ul>
                    <% exerciseSaves.forEach(exercise => { %>
                        <% if(exercise.bodyPart === 'chest') { %>
                            <li>
                                <% let name = exercise.name %>
                                <% name.replace('', '%20') %>
                                <a href="/exercises/saves/<%= exercise.id %>" class="exerciseDetails"><%= exercise.name %></a>
                            </li>
                        <% } %> 
                    <% }) %> 
                </ul>
            </div>
            <div id="back" class="overflow-auto">
                <h3 class="muscleTitle">Back:</h3>
                <ul>
                    <% exerciseSaves.forEach(exercise => { %>
                        <% if(exercise.bodyPart === 'back') { %>
                            <li>
                                <% let name = exercise.name %>
                                <% name.replace('', '%20') %>
                                <a href="/exercises/saves/<%= exercise.id %>" class="exerciseDetails"><%= exercise.name %></a>
                            </li>
                        <% } %> 
                    <% }) %> 
                </ul>
            </div>
            <div id="legs" class="overflow-auto">
                <h3 class="muscleTitle">Legs:</h3>
                <ul>
                    <% exerciseSaves.forEach(exercise => { %>
                        <% if(exercise.bodyPart === 'upper legs') { %>
                            <li>
                            <% let name = exercise.name %>
                            <% name.replace('', '%20') %>
                            <a href="/exercises/saves/<%= exercise.id %>" class="exerciseDetails"><%= exercise.name %></a>
                            </li>
                        <% } %> 
                    <% }) %> 
                </ul>
            </div>
        </div>
    
        <div id="secondRow">
            <div id="shoulders" class="overflow-auto">
                <h3 class="muscleTitle">Shoulders:</h3>
                <ul>
                    <% exerciseSaves.forEach(exercise => { %>
                        <% if(exercise.bodyPart === 'shoulders') { %>
                            <li>
                            <% let name = exercise.name %>
                            <% name.replace('', '%20') %>
                            <a href="/exercises/saves/<%= exercise.id %>" class="exerciseDetails"><%= exercise.name %></a>
                            </li>
                        <% } %> 
                    <% }) %> 
                </ul>
            </div>
            <div id="arms">
                <h3 class="muscleTitle" class="overflow-auto">Arms:</h3>
                <ul>
                    <% exerciseSaves.forEach(exercise => { %>
                        <% if(exercise.bodyPart === 'upper arms' || exercise.bodyPart === 'lower arms') { %>
                            <li>
                            <% let name = exercise.name %>
                            <% name.replace('', '%20') %>
                            <a href="/exercises/saves/<%= exercise.id %>" class="exerciseDetails"><%= exercise.name %></a>
                            </li>
                        <% } %> 
                    <% }) %> 
                </ul>
            </div>
            <div id="calves">
                <h3 class="muscleTitle" class="overflow-auto">Calves:</h3>
                <ul>
                    <% exerciseSaves.forEach(exercise => { %>
                        <% if(exercise.bodyPart === 'lower legs') { %>
                            <li>
                            <% let name = exercise.name %>
                            <% name.replace('', '%20') %>
                            <a href="/exercises/saves/<%= exercise.id %>" class="exerciseDetails"><%= exercise.name %></a>
                            </li>
                        <% } %> 
                    <% }) %> 
                </ul>
            </div>
        </div>
    
        <div id="thirdRow">
            <div id="abs" class="class="overflow-auto">
                <h3 class="muscleTitle overflow-auto">Abs:</h3>
                <ul>
                    <% exerciseSaves.forEach(exercise => { %>
                        <% if(exercise.bodyPart === 'waist') { %>
                            <li>
                            <% let name = exercise.name %>
                            <% name.replace('', '%20') %>
                            <a href="/exercises/saves/<%= exercise.id %>" class="exerciseDetails"><%= exercise.name %></a>
                            </li>
                        <% } %> 
                    <% }) %> 
                </ul>
            </div>
        </div>
    </div>
    <div id="addedSpace"></div>

    <footer class="shortFooter">
        <%- include('../partials/shortFooter') %>
    </footer>
</body>