<head>
    <link rel="stylesheet" href="/static/css/exercises.css">
</head>

<body>
    <nav>
        <div class="navContainer">
            <div class="profileLink">
                <a href="/profile" class="searchNav">Profile</a>
            </div>
            <div class="logLink">
                <a href="/workouts/new" class="searchNav">Log a Workout</a>
            </div>
            <div class="searchLink">
                <a href="/auth/logout" class="searchNav">Logout</a>
            </div>
        </div>
    </nav>

    <main id="search-container">
        <form method="GET" action="/exercises">
            <div class="search-div">
                <label for="exercise name input" id="search-label">Search By Muscle You Would Like to Target:</label>
    
                <br> <br>
    
                <select name="bodyPart" id="muscle-targeted">
                    <option value="waist">Abs</option>
                    <option value="back">Back</option>
                    <option value="upper%20arms">Biceps & Triceps</option>
                    <option value="lower%20legs">Calves</option>
                    <option value="chest">Chest</option>
                    <option value="lower%20arms">Forearms</option>
                    <option value="upper%20legs">Legs</option>
                    <option value="shoulders">Shoulders</option>
                </select>
                <input id="search-btn" type="submit" value="See Results!">
            </div>
        </form>    
    </main>

    <footer class="shortFooter">
        <%- include('../partials/shortFooter') %>
    </footer>
</body>