<head>
    <link rel="stylesheet" href="/static/css/exercises.css">
</head>

<body>
    <header>
        <nav>
            <div class="nav-container">
                <div class="hamburger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-list"
                        viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                    </svg>
                </div>

                <div class="left-link nav-link-container">
                    <a href="/exercises/saves" class="nav-links">Back</a>
                </div>
                <div class="middle-link nav-link-container">
                    <!-- <a href="/workouts/newPlan" class="nav-links">Plan a Workout</a> -->
                    <a href="/workouts/new" class="nav-links" id="log">Log Workout</a>
                    <a href="/exercises/search" class="search-exercises nav-links">Search Exercises</a>
                </div>
                <div class="right-link nav-link-container">
                    <a href="/auth/logout" class="nav-links">Logout</a>
                </div>
            </div>
        </nav>

        <aside class="hamburger-menu">
            <a href="/exercises/saves" class="nav-links">Back</a>
            <a href="/workouts/new" class="nav-links" id="log">Log Workout</a>
            <a href="/exercises/search" class="search-exercises nav-links">Search Exercises</a>
            <a href="/auth/logout" class="nav-links">Logout</a>
        </aside>

        <div class="saved-exercise-name">
            <h1>Your Saved Exercise: <%= name %>
            </h1>
        </div>
    </header>

    <main class="saved-exercise-body">
        <div class="saved-exercise-info-container">
            <div>
                <img src="<%= exerciseDemo %>" alt="animation demo of <%= name %> ">
            </div>
            <div class="exercise-info">
                <% if(bodyPart==='waist' ){ %>
                    <% newName='Abs' %>
                        <p>Muscle Group: <%= newName %>
                        </p>
                        <% } else { %>
                            <p>Muscle Group: <%= bodyPart %></p>
                            <% } %>
                                <p>Equipment: <%= equipment %></p>
                                <p>Muscle Targeted: <%= muscleTargeted %></p>
            </div>
        </div>
        <div class="show-form">
            <form method="POST" action="/exercises/saves/<%= id %>?_method=DELETE">
                <input id="unsave-btn" type="submit" value="Unsave">
            </form>
        </div>
    </main>

    <footer class="shortFooter">
        <%- include('../partials/shortFooter') %>
    </footer>

    <script src="../../static/js/app.js"></script>
</body>
